<h1>Edit this <%=@figure.name%> figure</h1>

<form method="POST" action="/figures/<%=@figure.id%>">
  <input type="hidden" name="_method" value="patch">
    Edit Figure Name:
      <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"><br><br>
    Edit Figure Landmarks:
<ul>
    <% Landmark.all.each do |landmarks|%>
        <li><input id="landmark_<%= landmarks.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmarks.id %>" <%= 'checked' if @figure.landmarks.include?(landmarks) %>> <%= landmarks.name %></input> </li>
    <%end%>
        or create new Landmark:
        <input type="text" name="landmark[name]" id="new_landmark">
</ul>

Edit Figure Titles:
    <ol>
        <% Title.all.each do |title| %>
            <li>  <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>> <%= title.name %></input> </li>
        <% end %>
            or create new Title:
            <input type="text" name="title[name]" id="new_title">
    </ol>


<input type="submit" value="Edit Figure" name="submit">

</form>
