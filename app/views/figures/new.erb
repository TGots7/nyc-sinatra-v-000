<h1>Create a new Figure</h1>

<form method="POST" action="/figures"><br>
  Figure Name:
    <input type="text" name="figure[name]" id="figure_name"><br><br>
    
    Figure Landmarks:
      <ul>
          <% Landmark.all.each do |landmarks|%>
            <li><input id="landmark_<%= landmarks.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmarks.id %>"> <%= landmarks.name%> </li>
          <%end%>
          or create new Landmark:
          <input type="text" name="landmark[name]" id="new_landmark">
      </ul>

Figure Titles:
    <ol>
        <% Title.all.each do |title| %>
            <li>  <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"> <%= title.name%> </li>
        <% end %>
        or create new Title:
        <input type="text" name="title[name]" id="new_title">
    </ol>

<input type="submit" value="Create New Figure" name="submit">

</form>
